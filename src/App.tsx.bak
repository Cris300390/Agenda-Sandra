import { Suspense, lazy } from 'react'
import { Routes, Route, Navigate } from 'react-router-dom'
import Header from './components/Header'
import DecorativeEdges from './components/DecorativeEdges' // profe + alumnos

const Agenda   = lazy(() => import('./pages/Agenda'))
const Alumnos  = lazy(() => import('./pages/Alumnos'))
const Pagos    = lazy(() => import('./pages/Pagos'))
const Informes = lazy(() => import('./pages/Informes'))

export default function App() {
  return (
    <div>
      <Header />
      <DecorativeEdges />

      {/* ðŸ‘‰ colchÃ³n bajo el header */}
      <main className="page--withHeader" style={mainStyles}>
        <Suspense fallback={<div style={fallbackStyles}>Cargandoâ€¦</div>}>
          <Routes>
            <Route path="/" element={<Agenda />} />
            <Route path="/alumnos" element={<Alumnos />} />
            <Route path="/pagos" element={<Pagos />} />
            <Route path="/informes" element={<Informes />} />
            <Route path="*" element={<Navigate to="/" replace />} />
          </Routes>
        </Suspense>
      </main>
    </div>
  )
}

/* ---------- Estilos mÃ­nimos del contenedor ---------- */
const mainStyles: React.CSSProperties = {
  maxWidth: 1200,
  margin: '16px auto',
  padding: '0 12px 24px',
  position: 'relative',
  zIndex: 3, // por delante de las ilustraciones
}

const fallbackStyles: React.CSSProperties = {
  padding: 20,
  background: '#fff',
  borderRadius: 12,
  border: '1px solid #f1f5f9',
}
